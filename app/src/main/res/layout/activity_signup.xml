<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/black">

    <!-- Back arrow and "Back" text at the top -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="24dp">

        <!-- Back arrow -->
        <ImageView
            android:layout_width="38dp"
            android:layout_height="54dp"
            android:contentDescription="Back Arrow"
            android:src="@drawable/ic_backarrow"
            android:tint="@android:color/white" />

        <!-- "Back" text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:layout_marginStart="12dp" />
    </LinearLayout>

    <!-- "Sign In" title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign In"
        android:textSize="24sp"
        android:textColor="@android:color/white"
        android:layout_marginBottom="8dp" />

    <!-- "Enter your email to continue" subtitle -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter your email to continue"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"
        android:layout_marginBottom="12dp" />

    <!-- Email input field -->
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:inputType="textEmailAddress"

        android:padding="12dp"
        android:textColorHint="@android:color/darker_gray"
        android:textColor="@android:color/white"
        android:layout_marginBottom="16dp" />

    <!-- Continue button -->
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Continue"
        android:background="@drawable/rounded_border"
        android:textColor="@android:color/white"
        android:layout_marginBottom="12dp" />

    <!-- OR separator -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingVertical="16dp">

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@android:color/darker_gray" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OR"
            android:textColor="@android:color/darker_gray"
            android:paddingHorizontal="8dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@android:color/darker_gray" />
    </LinearLayout>

    <!-- Social Media Logins -->
    <!-- Google Login Button -->
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Continue with Google"
        android:drawableStart="@drawable/ic_google"
        android:background="@drawable/rounded_border"
        android:textColor="@android:color/black"
        android:layout_marginBottom="12dp" />

    <!-- Facebook Login Button -->
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Continue with Facebook"
        android:drawableStart="@drawable/ic_facbook"
        android:background="@drawable/rounded_border"
        android:textColor="@android:color/black" />

    <!-- Terms of Use and Privacy Policy -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="By tapping Continue with Facebook or Google, you agree to Etsy's Terms of Use and Privacy Policy."
        android:textColor="@android:color/darker_gray"
        android:textSize="12sp"
        android:layout_marginTop="16dp"
        android:gravity="center" />

</LinearLayout>
